
<%- include('./layout') -%>
<body>
    <h3>Registrar Usuario</h3>

    <form action="/register" method="post">
        <div class="form-group row">
            <label for="username" class="col-sm-1 col-form-label">Nombre:</label>
            <div class="col-sm-4">
                <input class="form-control form-control-sm" rows="2" type="text" name="username" /></p>
            </div>
        </div>
        <div class="form-group row">
            <label for="username" class="col-sm-1 col-form-label">Contrase√±a:</label>
            <div class="col-sm-4">
                <input class="form-control form-control-sm" rows="2" type="password" name="password" /></p>
            </div>
        </div>
        <div class="form-group row">
            <label for="username" class="col-sm-1 col-form-label">Email:</label>
            <div class="col-sm-4">
                <input class="form-control form-control-sm" rows="2" type="email" name="email" /></p>
            </div>
        </div>
        <div class="form-group row">
            <label for="username" class="col-sm-1 col-form-label">Edad:</label>
            <div class="col-sm-4">
                <input class="form-control form-control-sm" rows="2" type="number" name="age" /></p>
            </div>
        </div>
        <div class="form-group row">
            <label for="username" class="col-sm-1 col-form-label">Direccion:</label>
            <div class="col-sm-4">
                <input class="form-control form-control-sm" rows="2" type="text" name="address" /></p>
            </div>
        </div>
        <div class="form-group row">
            <label for="username" class="col-sm-1 col-form-label">Telefono:</label>
            <div class="col-sm-4">
                <input class="form-control form-control-sm" rows="2" type="text" name="phone" /></p>
            </div>
        </div>
        <div class="form-group row">
            <label for="username" class="col-sm-1 col-form-label">Picture:</label>
            <div class="col-sm-4">
                <input class="form-control form-control-sm" rows="2" type="url" name="avatar" /></p>
            </div>
        </div>

        <div class="form-group row"></div>
            <button class="btn btn-primary mb-4">REGISTER</button>
        </div>
    </form>
    <div class="form-group row"></div>
        <button class="btn btn-primary mb4" onclick="location.href = '/'">GO TO LOGIN</button>
    </div>
    
</body>
</html>

